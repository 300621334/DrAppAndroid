<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewUserRegister"
    android:orientation="vertical"
    android:id="@+id/layNewUser">

    <!-- Action Bar custom = https://www.youtube.com/watch?v=u9gDooP8IhU-->
<!--
    <include layout="@layout/drawer_actionbar" />
-->

    <TextView
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="@dimen/widgetMargLeft"
        android:layout_marginTop="10dp"
        android:inputType="textPersonName"
        android:text="Register"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/widgetMargLeft"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/lblWidth"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="User Name: "
            android:textAlignment="viewStart" />

        <EditText
            android:id="@+id/txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Enter a user name"
            android:inputType="textPersonName"
            android:text="Name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/widgetMargLeft"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/lblWidth"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="Password: " />

        <EditText
            android:id="@+id/txtPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Enter a pasword"
            android:inputType="textPersonName"
            android:text="Name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/widgetMargLeft"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/lblWidth"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="First Name:" />

        <EditText
            android:id="@+id/txtFName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Enter a user name"
            android:inputType="textPersonName"
            android:text="Name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/widgetMargLeft"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/lblWidth"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="Last Name:" />

        <EditText
            android:id="@+id/txtLName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Enter a user name"
            android:inputType="textPersonName"
            android:text="Name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/widgetMargLeft"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/lblWidth"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="Address:" />

        <EditText
            android:id="@+id/txtAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Enter a user name"
            android:inputType="textPersonName"
            android:text="Name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/widgetMargLeft"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/lblWidth"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="Email:" />

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Enter a user name"
            android:inputType="textPersonName"
            android:text="Name@e.e" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/widgetMargLeft"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/lblWidth"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="Phone:" />

        <EditText
            android:id="@+id/txtPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Enter a user name"
            android:inputType="number"
            android:text="Name" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radGrpRole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radRolePt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight=".3"
            android:text="Patient" />

        <RadioButton
            android:id="@+id/radRoleDr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="Provider" />

        <RadioButton
            android:id="@+id/radRoleAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="Admin"
            android:visibility="gone"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnCreateNewUser"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btnHt"
        android:layout_marginLeft="@dimen/widgetMargLeft"
        android:layout_marginRight="@dimen/widgetMargLeft"
        android:layout_marginTop="10dp"
        android:onClick="btnClk_CreateNewUser"
        android:text="Create New User" />

    <Button
        android:id="@+id/btnVerifyEmail"
        style="@style/mBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btnHt"
        android:layout_marginLeft="@dimen/widgetMargLeft"
        android:layout_marginRight="@dimen/widgetMargLeft"
        android:layout_marginTop="10dp"
        android:enabled="false"
        android:onClick="clk_verifyEmail"
        android:text="Verify Email" />

    <EditText
        android:id="@+id/txtVerifyEmail"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:hint="Enter code sent to your email"
        android:inputType="number"
        android:enabled="false"/>

</LinearLayout>